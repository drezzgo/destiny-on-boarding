---
interface Props {
    title_au: string;
    paragraph_1_au: string;
    paragraph_2_au: string;
    paragraph_3_au: string;
    text_1_au: string;
    text_2_au: string;
    text_bold_au: string;
    button_au: string;
}
const {title_au, paragraph_1_au, paragraph_2_au, paragraph_3_au, text_1_au, text_2_au, text_bold_au, button_au} = Astro.props;
---

<section class="relative py-12 sm:py-16 lg:pt-20 lg:pb-36 bg-gray-50" id="about">
  <div class="px-4 mx-auto sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 gap-y-8 lg:items-center lg:grid-cols-2 sm:gap-y-20 xl:grid-cols-5">
          <div class="text-center xl:col-span-2 lg:text-left md:px-16 lg:px-0">
              <div class="max-w-sm mx-auto sm:max-w-md md:max-w-full">
                  <h1 class="text-4xl font-bold leading-tight text-gray-900 sm:text-5xl sm:leading-tight lg:text-6xl lg:leading-tight font-pj">{title_au}</h1>
                  <p class="text-gray-700 text-lg leading-relaxed">
                    {paragraph_1_au}<br><br>{paragraph_2_au}<br><br>{paragraph_3_au}</p>
                  <div class="mt-8 lg:mt-12 lg:flex lg:items-center">
                      <div class="flex justify-center flex-shrink-0 -space-x-4 overflow-hidden lg:justify-start">
                          <img class="inline-block rounded-full w-14 h-14 ring-2 ring-white" src="https://destinyonboard.com/wp-content/uploads/2025/05/imagen_2025-05-20_234022191.png" alt="" />
                          <img class="inline-block rounded-full w-14 h-14 ring-2 ring-white" src="https://destinyonboard.com/wp-content/uploads/2025/05/imagen_2025-05-20_233843039.png" alt="" />
                          <img class="inline-block rounded-full w-14 h-14 ring-2 ring-white" src="https://destinyonboard.com/wp-content/uploads/2025/05/imagen_2025-05-20_233810270.png" alt="" />
                      </div>
                      <p class="mt-4 text-lg text-gray-900 lg:mt-0 lg:ml-4 font-pj">{text_1_au} <span class="font-bold">{text_bold_au}</span> {text_2_au}</p>
                  </div>
              </div>

              <div class="mt-8 sm:flex sm:items-center sm:justify-center lg:justify-start sm:space-x-5 lg:mt-12">
                  <a
                      href="#contact"
                      title=""
                      class="inline-flex items-center px-8 py-4 text-lg font-bold text-gray-800 transition-all duration-200 bg-[#F7C75C] border border-transparent rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 font-pj justif-center hover:bg-[#E6B94F]"
                      role="button"
                  >
                      {button_au}
                  </a>
              </div>
          </div>

          <div class="xl:col-span-3">
              <img class="w-full mx-auto scale-110" src="https://d33wubrfki0l68.cloudfront.net/29c501c64b21014b3f2e225abe02fe31fd8f3a5c/f866d/images/hero/3/illustration.png" alt="" />
          </div>
      </div>
  </div>
</section>