---
interface Props {
  title_wpas: string;
  paragraph_wpas: string;
  paragraph_testimonial_1: string;
  name_testimonial_1: string;
  job_testimonial_1: string;
  paragraph_testimonial_2: string;
  name_testimonial_2: string;
  job_testimonial_2: string;
  paragraph_testimonial_3: string;
  name_testimonial_3: string;
  job_testimonial_3: string;
}

const {
  title_wpas,
  paragraph_wpas,
  paragraph_testimonial_1,
  name_testimonial_1,
  job_testimonial_1,
  paragraph_testimonial_2,
  name_testimonial_2,
  job_testimonial_2,
  paragraph_testimonial_3,
  name_testimonial_3,
  job_testimonial_3
} = Astro.props;
---

<section class="py-16 bg-gray-50" aria-labelledby="testimonials-heading">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 id="testimonials-heading" class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        {title_wpas}
      </h2>
      <p class="mt-4 text-lg text-gray-600">
        {paragraph_wpas}
      </p>
    </div>

    <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {/* Testimonial 1 */}
      <div class="flex flex-col overflow-hidden shadow-xl transform transition duration-300 hover:-translate-y-2 hover:shadow-2xl bg-white rounded-lg p-6">
        <div class="flex flex-col justify-between flex-1">
          <div>
            <div class="flex items-center space-x-1">
              {[...Array(5)].map(() => (
                <svg
                  class="w-5 h-5 text-[#FDB241] animate-pulse transition-transform duration-300 hover:scale-110"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  aria-hidden="true"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <blockquote class="mt-8">
              <p class="text-lg leading-relaxed text-gray-900 font-pj">{paragraph_testimonial_1}</p>
            </blockquote>
          </div>
          <div class="flex items-center mt-8">
            <img 
              src="https://destinyonboard.com/wp-content/uploads/2025/05/smiling-student-holding-book-and-wearing-headphones-ready-for-study.-1462630-scaled.jpg" 
              alt={`Foto de ${name_testimonial_1}`} 
              class="w-12 h-12 rounded-full object-cover"
            />
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900 font-pj">{name_testimonial_1}</p>
              <p class="text-sm text-gray-500 font-pj">{job_testimonial_1}</p>
            </div>
          </div>
        </div>
      </div>

