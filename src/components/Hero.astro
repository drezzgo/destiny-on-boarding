---
const {title, hero_parrafo, boton} = Astro.props;
---
<section class="flex flex-col items-center text-center bg-gray-300">
    <div class="max-w-4xl mx-auto py-56 text-white flex flex-col gap-7">
        <h1 class="text-6xl font-bold">{title}</h1>
        <p class="text-xl mx-10" set:html={hero_parrafo}></p>
        <div class="flex justify-center">
            <a href="/" class="inline-block rounded-full bg-amber-300 px-4 py-2.5 text-lg font-semibold text-gray-700 shadow-xs hover:bg-sky-800 hover:text-white focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-cyan-600" set:text={boton}></a>
        </div>
    </div>
</section>