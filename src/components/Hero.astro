---
const {title, hero_parrafo, boton} = Astro.props;
---
<section class="flex flex-col items-center text-center bg-gray-800">
    <div class="max-w-4xl mx-auto py-16 text-white">
        <h1 class="text-6xl font-bold mb-7">{title}</h1>
        <p class="text-xl mb-7 mx-10" set:html={hero_parrafo}></p>
        <a href="" class="rounded-md bg-white px-3.5 py-2.5 text-lg font-semibold text-cyan-600 shadow-xs hover:bg-cyan-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-clay-600" set:text={boton}></a>
    </div>
</section>