---
interface Props {
  question_1: string;
  question_2: string;
  question_3: string;
  question_4: string;
  question_5: string;
  question_6: string;
  question_7: string;
  question_8: string;
  answer_1: string;
  answer_2: string;
  answer_3: string;
  answer_4: string;
  answer_5: string;
  answer_6: string;
  answer_7: string;
  answer_8: string;
}
const {
  question_1, question_2, question_3, question_4, question_5, question_6, question_7, question_8,
  answer_1, answer_2, answer_3, answer_4, answer_5, answer_6, answer_7, answer_8
} = Astro.props;

// Aquí transformas los props en un array de objetos
const faqs = [
  { question: question_1, answer: answer_1 },
  { question: question_2, answer: answer_2 },
  { question: question_3, answer: answer_3 },
  { question: question_4, answer: answer_4 },
  // Si tienes FAQs con listas, puedes agregar un campo "list"
  { question: question_5, answer: answer_5, list: [
    "Timelines, key requirements, and first steps",
    "Your best options based on your current visa or goal",
    "What programs make sense for your case",
    "A step-by-step strategy to stay or study"
  ]},
  { question: question_6, answer: answer_6 },
  { question: question_7, answer: answer_7, list: [
    "English language courses",
    "Bachelor’s degrees",
    "PGWP-eligible programs (Post-Graduation Work Permit)",
    "Short-term study experiences like summer camps"
  ]},
  { question: question_8, answer: answer_8 }
];
---

<section class="py-24 bg-white" aria-labelledby="faq-heading">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-16 text-center">
      <h6 class="text-lg text-yellow-600 font-medium mb-2">FAQs</h6>
      <h2 id="faq-heading" class="text-4xl font-bold text-gray-900 leading-[3.25rem] font-manrope">
        Frequently Asked Questions
      </h2>
    </div>

    <div class="max-w-3xl mx-auto space-y-6">
      {faqs.map(faq => (
        <details class="group rounded-2xl border border-gray-200 hover:bg-yellow-50 transition-all duration-300 overflow-hidden">
          <summary class="px-6 py-5 cursor-pointer flex items-center justify-between text-left text-lg font-medium text-gray-900 group-open:text-yellow-600 group-hover:text-yellow-600">
            <span>{faq.question}</span>
            <span class="transform transition-transform duration-300 group-open:rotate-45 text-2xl text-gray-500 group-hover:text-yellow-600">+</span>
          </summary>
          <div class="px-6 pb-5 pt-1 text-base text-gray-700 leading-6">
            {faq.answer}
            {faq.list && (
              <>
                <br /><br />
                <ul>
                  {faq.list.map(item => (
                    <li class="list-disc ml-6">{item}</li>
                  ))}
                </ul>
              </>
            )}
          </div>
        </details>
      ))}
    </div>
  </div>
</section>
