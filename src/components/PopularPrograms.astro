---
// PopularPrograms.astro
interface Props {
  title_pp: string;
  paragraph_pp: string;
  name_program_1: string;
  name_program_2: string;
  name_program_3: string;
  name_program_4: string;
  paragraph_program_1: string;
  paragraph_program_2: string;
  paragraph_program_3: string;
  paragraph_program_4: string;
  extend_paragraph_program_1: string;
  extend_paragraph_program_2: string;
  extend_paragraph_program_3: string;
  extend_paragraph_program_4: string;
}

const { title_pp, paragraph_pp, name_program_1, paragraph_program_1, extend_paragraph_program_1, name_program_2, paragraph_program_2, extend_paragraph_program_2, name_program_3, paragraph_program_3, extend_paragraph_program_3, name_program_4, paragraph_program_4, extend_paragraph_program_4 } = Astro.props;

interface Program {
  title: string;
  shortDescription: string;
  longDescription: string;
  image: string;
}

const programs: Program[] = [
  {
    title: name_program_1,
    shortDescription: paragraph_program_1,
    longDescription: extend_paragraph_program_1,
    image: "https://destinyonboard.com/wp-content/uploads/2025/05/smiling-student-holding-book-and-wearing-headphones-ready-for-study.-1462630-scaled.jpg"
  },
  {
    title: name_program_2,
    shortDescription: paragraph_program_2,
    longDescription: extend_paragraph_program_2,
    image: "https://destinyonboard.com/wp-content/uploads/2025/05/smiling-young-woman-holding-a-cambridge-book-in-a-vibrant-educational-environment.-20604559-scaled.jpg"
  },
  {
    title: name_program_3,
    shortDescription: paragraph_program_3,
    longDescription: extend_paragraph_program_3,
    image: "https://destinyonboard.com/wp-content/uploads/2025/05/woman-using-laptop-on-outdoor-stairs-studying-online-with-headphones-and-backpack.-3775128-scaled.jpg"
  },
  {
    title: name_program_4,
    shortDescription: paragraph_program_4,
    longDescription: extend_paragraph_program_4,
    image: "https://destinyonboard.com/wp-content/uploads/2025/05/group-of-teenage-friends-sitting-outdoors-smiling-and-having-fun-together.-923657-scaled.jpg"
  }
]
---
<section class="py-20 bg-gray-50" aria-labelledby="programs-heading" id="programs">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 id="programs-heading" class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        {title_pp}
      </h2>
      <p class="mt-4 text-lg text-gray-600">
        {paragraph_pp}
      </p>
    </div>

    <div class="mt-16 grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-4">
      {programs.map(program => (
        <div class="perspective">
          <div class="relative w-full h-[480px] transform-style preserve-3d transition duration-700 hover:rotate-y-180">
            {/* Front */}
            <div class="absolute w-full h-full bg-white rounded-xl shadow-lg overflow-hidden backface-hidden">
              <img src={program.image} alt={program.title} class="w-full h-56 object-cover" />
              <div class="p-5">
                <h3 class="text-xl font-semibold text-gray-800">{program.title}</h3>
                <p class="mt-2 text-gray-600">{program.shortDescription}</p>
              </div>
            </div>

            {/* Back */}
            <div class="absolute w-full h-full bg-white rounded-xl shadow-lg p-5 rotate-y-180 backface-hidden flex flex-col justify-between">
              <div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">{program.title}</h3>
                <p class="text-gray-600">{program.longDescription}</p>
              </div>
              <a href="#contact" class="inline-block mt-6 bg-[#E6B94F] text-gray-900 px-4 py-2 rounded-lg font-medium shadow-lg hover:brightness-105 transition duration-300 text-center">
                Inscribirme
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
