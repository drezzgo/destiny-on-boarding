---
const {texto_cm, subtitulo_cm, parrafo_cm, titulo_card_1, texto_card_1} = Astro.props;
---

<section class="max-w-5xl mx-auto flex flex-col items-center text-center my-20">
    <div class="mx-36 mb-20 flex flex-col gap-6">
        <p class="uppercase text-cyan-600 text-lg" set:text={texto_cm}></p>
        <h2  class="mx-8 text-4xl font-bold " set:text={subtitulo_cm}></h2>
        <p class="mx-8" set:text={parrafo_cm}></p>
    </div>
    <div class="px-32 grid grid-cols-3 gap-4 bg-gray-300">
        <div class="flex flex-col gap-2 items-center text-center bg-red-300">
            <img class="size-24" src="../../public/favicon.svg" alt="">
            <h3 set:text={titulo_card_1}/>
            <p set:text={texto_card_1}/>
        </div>
        <div class="flex flex-col gap-2 items-center text-center bg-blue-300">
            <img class="size-24" src="../../public/favicon.svg" alt="">
            <h3 set:text={titulo_card_1}/>
            <p set:text={texto_card_1}/>
        </div>
        <div class="flex flex-col gap-2 items-center text-center bg-yellow-300">
            <img class="size-24" src="../../public/favicon.svg" alt="">
            <h3 set:text={titulo_card_1}/>
            <p set:text={texto_card_1}/>
        </div>
    </div>
</section>