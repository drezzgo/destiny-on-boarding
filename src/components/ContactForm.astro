<section class="py-16 bg-gray-50" aria-labelledby="contact-heading" id="contact">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 id="contact-heading" class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Contact Us
      </h2>
      <p class="mt-4 text-lg text-gray-600">
        Ready to start your journey? Get in touch with us today.
      </p>
    </div>

    <div class="mt-12 max-w-lg mx-auto">
      <form 
        id="contact-form"
        class="grid grid-cols-1 gap-y-6"
        action="https://formsubmit.co/agongoraramirez@gmail.com"
        method="POST"
      >
        <input type="hidden" name="_next" value="https://destinyonboard.com/astro-test/thanks" />
        <input type="hidden" name="_cc" value="nicolas.perezcallejas@gmail.com,nicolasospina2963@gmail.com,susanabonales@gmail.com" />
        <input type="hidden" name="_captcha" value="false" />
        <input type="text" name="_honey" style="display: none;" />

        <div>
          <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
          <div class="mt-1">
            <input
              type="text"
              name="name"
              id="name"
              required
              class="py-3 px-4 block w-full shadow-sm focus:ring-gray-500 focus:border-yellow-500 border-gray-300 rounded-md"
              placeholder="John Doe"
            />
          </div>
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <div class="mt-1">
            <input
              type="email"
              name="email"
              id="email"
              required
              class="py-3 px-4 block w-full shadow-sm focus:ring-gray-500 focus:border-yellow-500 border-gray-300 rounded-md"
              placeholder="john@email.com"
            />
          </div>
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
          <div class="mt-1">
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="py-3 px-4 block w-full shadow-sm focus:ring-gray-500 focus:border-yellow-500 border-gray-300 rounded-md"
              placeholder="Write your message here..."
            ></textarea>
          </div>
        </div>

        <div>
          <button
            type="submit"
            class="w-full inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-full shadow-sm text-base font-medium text-gray-900 bg-[#F7C75C] hover:bg-[#E6B94F] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500"
          >
            Send Message
          </button>
        </div>
      </form>
    </div>
  </div>
</section>