---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Cards from '../components/Cards.astro';
import Testimonials from '../components/Testimonials.astro';
import PopularPrograms from '../components/PopularPrograms.astro';
import AboutUs from '../components/AboutUs.astro';
import FAQ from '../components/FAQ.astro';
import ContactForm from '../components/ContactForm.astro';
import {getPageInfo} from '../lib/wp';

// const {title, hero_parrafo, boton, texto_cm, subtitulo_cm, parrafo_cm, titulo_card_1, texto_card_1} = await getPageInfo("home")
const {title, hero_paragraph, button, text1_how_it_works, subtitle_how_it_works, text_how_it_works, title_card_1_how_it_works, paragraph_card_1_how_it_works, title_card_2_how_it_works, paragraph_card_2_how_it_works, title_card_3_how_it_works, paragraph_card_3_how_it_works, title_wpas, paragraph_wpas, paragraph_testimonial_1, name_testimonial_1, job_testimonial_1, paragraph_testimonial_2, name_testimonial_2, job_testimonial_2, paragraph_testimonial_3, name_testimonial_3, job_testimonial_3, title_pp, paragraph_pp, name_program_1, paragraph_program_1, extend_paragraph_program_1, name_program_2, paragraph_program_2, extend_paragraph_program_2, name_program_3, paragraph_program_3, extend_paragraph_program_3, name_program_4, paragraph_program_4, extend_paragraph_program_4, title_au, paragraph_1_au, paragraph_2_au, paragraph_3_au, text_1_au, text_2_au, text_bold_au, button_au, question_1, question_2, question_3, question_4, question_5, question_6, question_7, question_8, answer_1, answer_2, answer_3, answer_4, answer_5, answer_6, answer_7, answer_8} = await getPageInfo("homee")
---

<Layout>
	<main>
		<Hero 
			title={title},
			hero_parrafo={hero_paragraph},
			boton={button}
		/>
		<Cards 
			text1_how_it_works={text1_how_it_works}
			subtitle_how_it_works={subtitle_how_it_works}
			text_how_it_works={text_how_it_works}
			title_card_1_how_it_works={title_card_1_how_it_works}
			paragraph_card_1_how_it_works={paragraph_card_1_how_it_works}
			title_card_2_how_it_works={title_card_2_how_it_works}
			paragraph_card_2_how_it_works={paragraph_card_2_how_it_works}
			title_card_3_how_it_works={title_card_3_how_it_works}
			paragraph_card_3_how_it_works={paragraph_card_3_how_it_works}

		/>
		<Testimonials 
			title_wpas={title_wpas}, 
			paragraph_wpas={paragraph_wpas},
			paragraph_testimonial_1={paragraph_testimonial_1},
			name_testimonial_1={name_testimonial_1},
			job_testimonial_1={job_testimonial_1},
			paragraph_testimonial_2={paragraph_testimonial_2},
			name_testimonial_2={name_testimonial_2},
			job_testimonial_2={job_testimonial_2},
			paragraph_testimonial_3={paragraph_testimonial_3},
			name_testimonial_3={name_testimonial_3},
			job_testimonial_3={job_testimonial_3}
		/>
		<PopularPrograms 
			title_pp={title_pp},
			paragraph_pp={paragraph_pp},
			name_program_1={name_program_1},
			paragraph_program_1={paragraph_program_1},
			extend_paragraph_program_1={extend_paragraph_program_1},
			name_program_2={name_program_2},
			paragraph_program_2={paragraph_program_2},
			extend_paragraph_program_2={extend_paragraph_program_2},
			name_program_3={name_program_3},
			paragraph_program_3={paragraph_program_3},
			extend_paragraph_program_3={extend_paragraph_program_3},
			name_program_4={name_program_4},
			paragraph_program_4={paragraph_program_4},
			extend_paragraph_program_4={extend_paragraph_program_4}
		/>
		<AboutUs 
			title_au={title_au},
			paragraph_1_au={paragraph_1_au},
			paragraph_2_au={paragraph_2_au},
			paragraph_3_au={paragraph_3_au},
			text_1_au={text_1_au},
			text_2_au={text_2_au},
			text_bold_au={text_bold_au},
			button_au={button_au}
		/>
		<FAQ 
			question_1={question_1}
			question_2={question_2}
			question_3={question_3}
			question_4={question_4}
			question_5={question_5}
			question_6={question_6}
			question_7={question_7}
			question_8={question_8}
			answer_1={answer_1}
			answer_2={answer_2}
			answer_3={answer_3}
			answer_4={answer_4}
			answer_5={answer_5}
			answer_6={answer_6}
			answer_7={answer_7}
			answer_8={answer_8}
		/>
		<ContactForm />
	</main>
</Layout>
